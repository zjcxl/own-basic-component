{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "paths": {
      "@own-basic-component/buried": [
        "./packages/basic-buried/src/index.ts"
      ],
      "@own-basic-component/buried-vue": [
        "./packages/basic-buried-vue/src/index.ts"
      ],
      "@own-basic-component/config": [
        "./packages/basic-config/src/index.ts"
      ],
      "@own-basic-component/request": [
        "./packages/basic-request/src/index.ts"
      ],
      "@own-basic-component/request-axios": [
        "./packages/basic-request-axios/src/index.ts"
      ],
      "@own-basic-component/request-fetch": [
        "./packages/basic-request-fetch/src/index.ts"
      ],
      "@own-basic-component/util": [
        "./packages/basic-util/src/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022",
    "types": [
      "vite/client",
      "node"
    ]
  },
  "exclude": ["dist", "node_modules"]
}
