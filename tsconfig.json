{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "@own-basic-component/buried": ["./packages/basic-buried/src/index.ts"],
      "@own-basic-component/buried-vue": ["./packages/basic-buried-vue/src/index.ts"],
      "@own-basic-component/config": ["./packages/basic-config/src/index.ts"],
      "@own-basic-component/request": ["./packages/basic-request/src/index.ts"],
      "@own-basic-component/request-axios": ["./packages/basic-request-axios/src/index.ts"],
      "@own-basic-component/request-fetch": ["./packages/basic-request-fetch/src/index.ts"],
      "@own-basic-component/ui-naive": ["./packages/basic-ui-naive/src/index.ts"],
      "@own-basic-component/util": ["./packages/basic-util/src/index.ts"],
    }
  },
  "exclude": ["dist", "node_modules"]
}
