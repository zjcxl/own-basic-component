{
  "name": "@own-basic-component/vue",
  "type": "module",
  "version": "0.8.202",
  "packageManager": "pnpm@9.14.2",
  "author": "chenxueli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zjcxl/own-basic-component.git",
    "directory": "packages/basic-vue"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/basic-vue/src/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/basic-vue/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 3333",
    "lint": "eslint naive",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "up": "taze major -I"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.10.0",
    "@own-basic-component/config": "workspace:*",
    "@own-basic-component/request": "workspace:*",
    "@own-basic-component/util": "workspace:*",
    "@types/node": "^22.10.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^11.3.0",
    "eslint": "^9.15.0",
    "jsdom": "^25.0.1",
    "less": "^4.2.1",
    "lint-staged": "^15.2.10",
    "pnpm": "^9.14.2",
    "taze": "^0.18.0",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^0.18.5",
    "unplugin-vue-macros": "^2.13.4",
    "vfonts": "^0.0.3",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.6",
    "vue": "^3.5.13",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
