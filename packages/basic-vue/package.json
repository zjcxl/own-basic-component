{
  "name": "@own-basic-component/vue",
  "type": "module",
  "version": "0.8.170",
  "packageManager": "pnpm@9.6.0",
  "author": "chenxueli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zjcxl/own-basic-component.git",
    "directory": "packages/basic-vue"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/basic-vue/src/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/basic-vue/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 3333",
    "lint": "eslint naive",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "up": "taze major -I"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.24.1",
    "@own-basic-component/config": "workspace:*",
    "@own-basic-component/request": "workspace:*",
    "@own-basic-component/util": "workspace:*",
    "@types/node": "^22.0.2",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^10.11.0",
    "eslint": "8.57.0",
    "jsdom": "^24.1.1",
    "less": "^4.2.0",
    "lint-staged": "^15.2.7",
    "pnpm": "^9.6.0",
    "taze": "^0.16.3",
    "typescript": "^5.5.4",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-macros": "^2.11.2",
    "vfonts": "^0.0.3",
    "vite": "^5.3.5",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^2.0.5",
    "vue": "^3.4.35",
    "vue-tsc": "^2.0.29"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
